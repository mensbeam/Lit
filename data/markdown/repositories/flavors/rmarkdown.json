{
  "key": "rmarkdown",
  "patterns": [
    {
      "begin": "(?x) (```)( \\{r\\s? (.*?) \\}$ )",
      "end": "^(\\1)$",
      "name": "fenced.code.md",
      "contentName": "source.embedded.r",
      "patterns": [
        {
          "include": "source.r"
        }
      ],
      "beginCaptures": {
        "1": {
          "name": "punctuation.md"
        },
        "2": {
          "patterns": [
            {
              "begin": "(\\{)(r)(\\s?)",
              "beginCaptures": {
                "1": {
                  "name": "punctuation.md"
                },
                "2": {
                  "name": "language.constant.md"
                }
              },
              "end": "(\\})$",
              "endCaptures": {
                "1": {
                  "name": "punctuation.md"
                }
              },
              "patterns": [
                {
                  "include": "#rmarkdown-attributes"
                }
              ]
            }
          ]
        }
      },
      "endCaptures": {
        "1": {
          "name": "punctuation.md"
        }
      }
    }
  ]
}
